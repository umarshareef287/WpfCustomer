<Page x:Class="WpfCustomerApp.ResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ResultsPage">
    <Grid>
        <Grid>
            <TextBlock Text="Results Page" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="10"/>

            <!-- Back Button -->
            <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="BackButton_Click"/>

            <!-- DataGrid for displaying tabular data -->
            <DataGrid x:Name="ResultsDataGrid" AutoGenerateColumns="True" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10,60,10,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
                <Button Content="Download in Excel" Margin="5" Click="DownloadExcelButton_Click"/>
                <Button Content="Download in XML" Margin="5" Click="DownloadXmlButton_Click"/>
            </StackPanel>
        </Grid>


    </Grid>
</Page>